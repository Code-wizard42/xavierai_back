{
  "name": "xavier-backend",
  "type": "application",
  "build": {
    "pack": "python",
    "python_version": "3.11"
  },
  "deploy": {
    "port": 5000,
    "health_check": "/health",
    "restart_policy": "unless-stopped"
  },
  "environment": {
    "FLASK_ENV": "production",
    "PORT": "5000",
    "PYTHONPATH": "/app"
  }
} 